@model MusicStoreMVC5EF.Models.Album

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Album</legend>
    <div class="row">
        <div class="col-md-4">
            <table class="table table-bordered">
                <tr>
                    <td>
                        <div class="font-weight-bold">Genre</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Genre.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">Artist</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Artist.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">Title</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">Price</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">AlbumArtUrl</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.AlbumArtUrl, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AlbumId }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index")
</p>
