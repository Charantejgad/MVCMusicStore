@model MusicStoreMVC5EF.Models.Concrete.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<h2 class="h2">Log On</h2>
<br />
<br />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h5 class="text-dark"> Please enter your user name and password.</h5>
<br />
@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">


            <div class="form-group">
                <div class="font-weight-bold">
                    @Html.LabelFor(m => m.UserName)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <div class="font-weight-bold">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <div>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>

            <p>
                <input type="submit" value="Log On" class="btn btn-outline-primary" />
            </p>
        </div>
    </div>
}
